
<script>
  let pathtof = window.location.pathname;
  function pageturn(pagename, variable) {
    if (pathtof === pagename) {
      let element = document.querySelector(variable);
      if (element) {
        element.classList.add("active-selector");
      }
    }
  }
  pageturn("/landing", ".home-div");
  pageturn("/rooms", ".rooms-div");
  pageturn("/manage", ".manage-div");
  pageturn("/sections", ".sections-div")
  pageturn("/faculty",".faculty-div");

  const navigators = document.querySelectorAll(
    " .home-div, .rooms-div, .sections-div, .manage-rooms, .manage-schedules, .sidebar-content2 div ,sidebar-content1 div, faculty-div"
  );
  navigators.forEach((navs) => {
    navs.addEventListener("click", function () {
      navigators.forEach((nave) => {
        nave.classList.remove("active-selector");
      });
      this.classList.add("active-selector");
    });
  });
  let menu = document.querySelector(".sidebar")
  function showmenu(){
    menu.classList.toggle("showside")
  }


function reload(){
  location.reload()
}


function popthis(message){
  let alertthis = document.querySelector(".alertthis");
   alertthis.textContent = message

   alertthis.style.display = "flex";

   setTimeout(() => {
    alertthis.style.display = "none"
    alertthis.textContent = ""
   }, 1000);
}

function logout(){
  window.location.href = "/"
  document.querySelector(".rolecont").textContent = ""
}

let showaddsss = document.querySelector(".manage-div")
let rolecontt = document.querySelector(".rolecont").textContent

if (rolecontt !== "admin"){
  showaddsss.style.display = "none"
}




</script>
